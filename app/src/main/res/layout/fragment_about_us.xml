<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.AboutUsFragment">

    <ImageView
        android:layout_marginTop="50dp"
        android:src="@drawable/salad"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:text="@string/app_title"
        android:textAlignment="center"
        android:id="@+id/title_aboutUs"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        android:textFontWeight="700"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="@string/description_app"
        android:textAlignment="center"
        android:textSize="15dp"

    android:id="@+id/description_aboutus"
        android:layout_margin="20dp"
        android:textFontWeight="700"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="نسخه 1.0.0"
        android:textAlignment="center"
        android:textSize="12dp"
        android:id="@+id/version_aboutus"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Developer: Hadi Moshaver"
        android:textAlignment="center"
        android:textSize="12dp"

        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</LinearLayout>